<assembly>
  <!-- 
    assembly descriptor to create a zip package containing the scripts laid
    out as in the src/main/scripts directory.
  -->
  <id>instrument</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <!-- include the build.properties file, filled in with current properties -->
    <file>
      <source>src/main/assembly/build/build.properties</source>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>${project.build.partnumber}*.*</include>
        <include>hash.xml</include>
        <include>hash.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependencies/ScoutUI/UIConfiguration/Debug</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>Debug</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/dependencies/ScoutUI/UIConfiguration/Simulation</directory>
      <lineEnding>keep</lineEnding>
      <outputDirectory>Simulation</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
