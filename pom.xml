	<properties>
		<wixdir>c:\Program Files (x86)\WiX Toolset v3.11\bin</wixdir>
		<firmware.version>1.0.33</firmware.version>
		<algorithm.version>4.3.8</algorithm.version>
		<nullsoft.builder>c:\Program Files (x86)\NSIS\makensis.exe</nullsoft.builder>
		<timestamp>${maven.build.timestamp}</timestamp>
		<maven.build.timestamp.format>ssSS</maven.build.timestamp.format>
		<tools>c:\tools\</tools>
		<project.build.partnumber>88888</project.build.partnumber>
		<project.build.offline_partnumber>77777</project.build.offline_partnumber>
		<project.build.automation_dll_name>CellHealthOpcUaModelDesign</project.build.automation_dll_name>
